{% extends 'Security/base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}
    <form class="form-signin" action="{{ path('login') }}" method="post">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <label for="inputUsername" class="sr-only">Username</label>
        <input type="text" id="inputUsername" class="form-control" value="{{ last_username }}" name="_username"
               placeholder="Username" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" name="_password" placeholder="Password" required>
        <label>
            <input type="checkbox" value="remember-me"> Remember me
        </label>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <a class="btn btn-secondary btn-block" href="{{ path('register') }}">Register</a>
        <a class="btn btn-secondary btn-block" href="#">I forgot my password</a>
    </form>
{% endblock %}
