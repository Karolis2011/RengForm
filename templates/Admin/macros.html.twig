{% macro display_form_errors(form) %}
    {% for fieldName, child in form if child.vars.valid is defined and not child.vars.valid %}
        {% if child.vars.compound and not child.vars.valid %}
            {{ forms.display_form_field_error(child) }}
        {% else %}
            {% for error in child.vars.errors %}
                <div class="alert alert-danger">
                    {% if child.vars.label is defined and child.vars.label is not null %}
                        {{ child.vars.label|trans|capitalize }}
                    {% else %}
                        {{ child.vars.name|trans|capitalize }}
                    {% endif %}
                    - {{ error.message|capitalize }}
                </div>
            {% endfor %}
        {% endif %}
    {% endfor %}
{% endmacro %}
