{% extends 'Admin/base.html.twig' %}

{% block title %}Workshops | {{ workshop.title }} | Update{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style/css/datetimepicker/bootstrap-datetimepicker.css') }}">
    <link rel="stylesheet" href="{{ asset('style/css/select2/select2.min.css') }}">
    <link rel="stylesheet" href="{{ asset('style/css/select2/select2-bootstrap4.min.css') }}">

    {{ parent() }}
{% endblock %}

{% block body %}
    <h2 class="border-bottom">
        {% block header %}Edit Workshop{% endblock %}
    </h2>
    {% if errors is not empty %}
        <div class="alert alert-danger" role="alert">
            {{ errors }}
        </div>
    {% endif %}
    <div class="row">
        <div class="col-md-6">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Title'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.description) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.place) }}
                {{ form_widget(form.place, {'attr': {'class': 'form-control', 'placeholder': 'Place'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.duration) }}
                <div class="input-group date timepicker">
                    {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
                    <div class="input-group-append">
                        <span class="input-group-text input-group-addon">
                            <span class="fa fa-clock-o"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.startTimes) }}
                <div id="timesList"
                     data-prototype="{{ form_widget(form.startTimes.vars.prototype)|e }}"
                     data-widget-tags="{{ '<div class="input-group date">__widget__<div class="input-group-append"><span class="input-group-text input-group-addon"><span class="fa fa-calendar"></span></span><span class="input-group-text removeTime"><span class="fa fa-times"></span></span></div></div>'|e }}">
                    {% for startTime in form.startTimes %}
                        <div class="input-group date datetimepicker">
                            {{ form_widget(startTime, {'attr': {'class': 'form-control'}}) }}
                            <div class="input-group-append">
                                <span class="input-group-addon input-group-text">
                                    <span class="fa fa-calendar"></span>
                                </span>
                                <span class="input-group-text removeTime">
                                    <span class="fa fa-times"></span>
                                </span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <button type="button" class="btn btn-primary" id="addTime" data-list="#timesList">Add Time</button>
            </div>
            <div class="form-group">
                {{ form_label(form.capacity) }}
                {{ form_widget(form.capacity, {'attr': {'class': 'form-control', 'placeholder': 'Unlimited'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.category) }}
                {{ form_widget(form.category, {'attr': {'class': 'form-control formSelect' }}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.formConfig) }}
                {{ form_widget(form.formConfig, {'attr': {'class': 'form-control formSelect' }}) }}
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            {{ form_row(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
{% endblock %}

{% block javascript_inline %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {
            $(".datetimepicker").datetimepicker({
                'format': 'YYYY-MM-DD HH:mm',
                'showClose': true
            });

            $(".timepicker").datetimepicker({
                'format': 'HH:mm',
                'showClose': true
            });

            $(".formSelect").select2({
                'placeholder': 'Select Registration Form',
                theme: "bootstrap4"
            });

            $('#addTime').click(function (e) {
                e.preventDefault();
                var list = $($(this).attr('data-list'));

                // grab the prototype template
                var newWidget = list.attr('data-prototype');
                // replace the "__name__" used in the id and name of the prototype
                // with a number that's unique to your emails
                // end name attribute looks like name="contact[emails][2]"
                newWidget = $(newWidget.replace(/__name__/g, '')).addClass('form-control');

                // create a new list element and add it to the list
                var newElem = $(list.attr('data-widget-tags').replace(/__widget__/g, newWidget[0].outerHTML));

                newElem.appendTo(list);
                newElem.datetimepicker({
                    'format': 'YYYY-MM-DD HH:mm',
                    'showClose': true
                });
            });

            $(".removeTime").click(function () {
                var item = $(this).parent().parent();
                item.remove();
            });
        });
    </script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/moment/moment.min.js') }}"></script>
    <script src="{{ asset('js/datetimepicker/bootstrap-datetimepicker.min.js') }}"></script>
    <script src="{{ asset('js/select2/select2.full.min.js') }}"></script>
{% endblock %}
