{% extends 'Admin/base.html.twig' %}

{% block title %}Forms | {{ formConfig.title }}{% endblock %}

{% block body %}
    <h2 class="border-bottom">{{ formConfig.title }}</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        Form details
                        <span class="pull-right">
                            <a href="{{ path('form_update', { 'formId': formConfig.id }) }}">
                                <i class="fa fa-edit"></i>
                            </a>
                        </span>
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ formConfig.id }}</td>
                        </tr>
                        <tr>
                            <th>Organisation</th>
                            <td>{{ formConfig.organisation ? formConfig.organisation.title }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ formConfig.description }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#tab_1" role="tab" aria-controls="tab_1"
                       aria-selected="true">Configuration</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#tab_2" role="tab" aria-controls="tab_2"
                       aria-selected="false">Preview</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab_1" role="tabpanel" aria-labelledby="tab_1">
                    {{ formConfig.config|json_encode(constant('JSON_PRETTY_PRINT')) }}
                </div>
                <div class="tab-pane fade" id="tab_2" role="tabpanel" aria-labelledby="tab_2"> {#style="pointer-events: none;">#}
                    <div id="formPreview"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript_inline %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function () {
            $('#formPreview').formRender({
                formData: {{ formConfig.config|json_encode|raw }}
            });
        });
    </script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('js/formBuilder/form-render.min.js') }}"></script>
    <script src="{{ asset('js/jquery-ui-sortable/jquery-ui.min.js') }}"></script>
{% endblock %}
