{% extends 'Admin/base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style/css/custom/table.css') }}">

    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Events</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group mr-2">
                <a class="btn btn-sm btn-outline-secondary" href="{{ path('event_create') }}">Create</a>
            </div>
        </div>
    </div>
    <table id="records" class="table table-striped table-hover table-sm">
        <thead>
        <tr>
            <th>ID</th>{#TODO: remove column#}
            <th>Title</th>
            <th>Date</th>
            <th>End Date</th>
            <th>Place</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody class="hover-pointer">
        {% for event in events %}
            <tr class="clickable-row" data-href="{{ path('event_show', { 'eventId': event.id }) }}">
                <td>{{ event.id }}</td>
                <td>{{ event.title }}</td>
                <td>{{ event.date|date('Y-m-d H:i:s') }}</td>
                <td>{% if event.endDate is not null %}{{ event.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ event.place }}</td>
                <td>{{ event.description|length > 30 ? event.description|slice(0, 30) ~ '...' : event.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascript_inline %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $(".clickable-row").click(function() {
                window.location = $(this).data("href");
            });
        });
    </script>
{% endblock %}
